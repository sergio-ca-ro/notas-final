<!DOCTYPE html>
<html>

<head>
  <title>TODO List</title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link rel="preconnect" href="https://fonts.gstatic.com">
  <link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro:wght@300&display=swap" rel="stylesheet">
</head>

<body>
  <div class="container">
    <div class="row">
      <div class="col d-col w-100">
        <div>
          <% if (taskEditar == undefined) { %>
          <form action="/tasks/" method="POST">
            <input type="text" class="form-control" name="title">
            <button class="btn btn-primary" type="submit">Enviar</button>
          </form>
          <% }else { %>
          <form action="/tasks/<%= taskEditar.id %>" method="PATCH">
            <input type="text" class="form-control" name="title" value="<%= taskEditar.id %>">
            <button class="btn btn-primary" type="submit">guardar nota</button>
          </form>
          <% } %>
        </div>
        <!-- Validacion opcional -->
        <div class="alert">
          <p class="invalid-text">El texto debe contener al menos 3 caracteres</p>
        </div>
        <!-- Validacion opcional -->

      </div>
    </div>

    <div class="row">
      <div class="col">
        <div class="list-group">
          <!-- Task -->
          <% tasks.forEach(task => { %>

          
          <div class="list-group-item">
            <a href="/tasks/<%= task.id %>">
              <%= task.task %>
            </a>

            <form action="/tasks/<%= task.id %>?_method=DELETE" method="POST">
              <button class="btn item-delete" type="submit">Borrar</button>
            </form>
          </div>
          <% }) %>
          <!-- Task -->
        </div>
      </div>
    </div>
  </div>
</body>

</html>